{% extends "_layouts/cp" %}
{% block content %}
<h1>{{ project.id ? 'Edit Project' : 'New Project' }}</h1>

<form method="post" accept-charset="UTF-8">
  {{ csrfInput() }}
  {{ actionInput('fundraising/projects/save') }}

  <input type="hidden" name="projectId" value="{{ project.id }}">

  <label>Title</label>
  <input type="text" name="title" value="{{ project.title }}">

  <label>Subtitle</label>
  <input type="text" name="subtitle" value="{{ project.subtitle }}">

  <label>Project ID (Unique)</label>
  <input type="text" name="projectIdField" value="{{ project.projectId }}">

  <label>Goal</label>
  <input type="number" name="goal" step="0.01" value="{{ project.goal }}">

  <label>Start Date</label>
  <input type="datetime-local" name="startDate" value="{{ project.startDate|date('Y-m-d\TH:i') }}">

  <label>End Date</label>
  <input type="datetime-local" name="endDate" value="{{ project.endDate|date('Y-m-d\TH:i') }}">

  <label>Description</label>
  {# Use RTE field or a Redactor field. For simplicity, just a textarea: #}
  <textarea name="description">{{ project.description }}</textarea>

  <label>Hero Image</label>
  <input type="text" name="heroImage" value="{{ project.heroImage }}">
  <small>Store a URL or asset handle here. Integrate Asset fields if desired.</small>

  <label>Media Gallery (JSON)</label>
  <textarea name="mediaGallery">{{ project.mediaGallery }}</textarea>

  <button type="submit">Save</button>
</form>

{% endblock %}
